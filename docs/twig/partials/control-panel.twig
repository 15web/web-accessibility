<div class="docs-control-panel control-panel">
    <div class="row">
        <div class="col-xs-4">
            <label for="cp-font-size">Font size:</label>
            <select id="cp-font-size" class="control-panel__select-text select">
                <option value="small">
                    Small
                </option>
                <option value="normal">
                    Medium
                </option>
                <option value="large">
                    Large
                </option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="cp-color-scheme">Color scheme:</label>
            <select id="cp-color-scheme" class="control-panel__select-color select">
                <option value="white">
                    White
                </option>
                <option value="black">
                    Black
                </option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="cp-images">Images:</label>
            <select id="cp-images" class="control-panel__select-image select">
                <option value="visible">
                    Enable
                </option>
                <option value="hidden">
                    Disabled
                </option>
            </select>
        </div>
    </div>
</div>