{# Control Panel #}
<body>
<div class="control-panel">
    <div class="control-panel__wrapper">
        <div class="control-panel__col">
           Размер шрифта
            <div class="control-panel__switcher">
                <button class="control-panel__switcher-btn" data-type="font-size" data-increase="true">+</button>
                <button class="control-panel__switcher-btn" data-type="font-size" data-increase="false">-</button>
            </div>

        </div>
        <div class="control-panel__col">
           Кернинг
            <div class="control-panel__switcher">
                <button class="control-panel__switcher-btn" data-type="letter-spacing" data-increase="true">+</button>
                <button class="control-panel__switcher-btn" data-type="letter-spacing" data-increase="false">-</button>
            </div>
        </div>
        <div class="control-panel__col">
           Изображения
            <button class="control-panel__switcher-btn" data-type="img" data-view="true">+</button>
            <button class="control-panel__switcher-btn" data-type="img" data-view="false">-</button>
        </div>
    </div>
</div>

<div>
    <img src="/src/" alt="er">
</div>
